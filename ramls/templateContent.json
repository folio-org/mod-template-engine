{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Template content",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "header": {
      "type": "string",
      "pattern": "\\S+.*",
      "description": "Template for header"
    },
    "body": {
      "type": "string",
      "pattern": "\\S+.*",
      "description": "Template for body"
    }
  },
  "required": [
    "header",
    "body"
  ]
}
